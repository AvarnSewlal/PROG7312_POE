<Window x:Class="MunicipalServicesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Services" Height="500" Width="600">

    <!-- Grid container with proper margin and background -->
    <Grid Margin="10">
        <!-- Grid Background with Gradient -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF0D41E4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- StackPanel to align buttons in the center -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnReportIssues" Content="Report Issues" Width="200" Height="50" Click="btnReportIssues_Click"/>
            <Button x:Name="btnLocalEvents" Content="Local Events and Announcements" Width="200" Height="50" Click="btnLocalEvents_Click" Margin="0,20,0,0"/>
            <Button x:Name="btnServiceRequestStatus" Content="Service Request Status" Width="200" Height="50" Click="btnServiceRequestStatus_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>



